---
import { getMostRecentPost } from "../../utils/sanity.js";
import Card from "../Card.astro";
export const prerender = false;
const post = await getMostRecentPost();
---

<section class="parfait parfait--yellow parfait--short parfait--home-writing">
  <div class="container">
    <h2 class="heading heading--eyebrow">#Writing</h2>
    <h3 class="heading heading--h1">Mostly nouns & verbs</h3>
    <div class="grid">
      <Card post={post} />
    </div>

    <h4 class="heading heading--h2"><a href="/blog">More writing!&nbsp;&rarr;</a></h4>
  </div>
</section>

<style>
  .parfait {
    border-top: 0;
    background-color: var(--color-yellow);
    background-image: url("../../images/desk.png");
    background-size: cover;
    color: var(--color-black);
  }

  .heading--h2 {
    font-size: clamp(3rem, -6.25rem + 50vw, 6rem);
    margin-top: 2rem;
  }

  .heading--h2 a {
    color: var(--color-black);
    text-decoration: none;
  }

  .heading--h2 a:hover,
  .heading--h2 a:focus {
    color: var(--color-white);
    text-decoration: underline;
  }


  .grid {
    align-content: stretch;
    align-items: stretch;
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(
      auto-fill,
      minmax(270px, 1fr)
    );
    grid-auto-rows: minmax(200px, auto);
    justify-items: stretch;
    margin-top: 2rem;
  }
</style>